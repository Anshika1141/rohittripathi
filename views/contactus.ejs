<section class="contact">
    <div class="content">
        <h2>Contact Us</h2>
        <p>Swing by for a cup of coffee, or leave us a message</p>
    </div>
    <div class="container-form">
        <div class="contactInfo">
            <div class="box">
                <div class="icon"><i class='bx bx-map bx-sm'></i></div>
                <div class="text">
                    <h3>Present Work Address</h3>
                    <p>Assistant Professor,
                        Department of Electronics Engineering,
                        J.C. Bose University of Science and
                        Technology, YMCA, Faridabad,
                        Haryana, 121006, India</p>
                </div>
            </div>
            <div class="box">
                <div class="icon"><i class='bx bx-envelope bx-sm'></i></div>
                <div class="text">
                    <h3>Email</h3>
                    <p>rohittripathi30.iitd@ieee.org<br>rohittripathi30.iitd@jcboseust.ac.in</p>
                </div>
            </div>
        </div>
        <div class="contactForm">
            <form action="/contactus" method="post">
                <h2>Send Message</h2>
                <div class="inputBox">
                    <input type="text" required="required" name="name" id="name">
                    <span>Full Name</span>
                </div>
                <div class="inputBox">
                    <input type="text" required="required" name="email" id="e-mail">
                    <span>Email</span>
                </div>
                <div class="inputBox">
                    <textarea name="message" required="required" id="message"></textarea>
                    <span>Type your Message.....</span>
                </div>
                <div class="inputBox" id="submit">
                    <input type="submit" name="sub" value="Send">
                </div>
            </form>
        </div>
    </div>
</section>







